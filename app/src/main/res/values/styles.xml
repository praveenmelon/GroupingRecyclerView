<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- To change the popup menu and app text color
        <item name="android:textColor">@android:color/background_light</item>
        -->
        <!-- To change the background of options menu
        <item name="android:itemBackground">@color/skyBlue</item>
        -->
        <item name="android:spinnerStyle">@style/SpinnerStyle</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItemStyle</item>
        <!-- Other AS spinner-related suggestions:
         <item name="android:dropDownSpinnerStyle"></item>
       -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- AB spinner styling

     -->
    <style name="SpinnerStyle" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <!-- Not needed on API17 (MS SVS emulator). Dropdown is below the value.
            <item name="android:dropDownVerticalOffset">?actionBarSize</item>
         -->
    </style>

    <style name="SpinnerItemStyle" >
        <item name="android:textAppearance">@style/SpinnerItemTextStyle</item>
    </style>

    <style name="SpinnerDropDownItemStyle" parent="SpinnerItemStyle">
        <item name="android:background">@drawable/spinner_background_selector</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="SpinnerItemTextStyle" parent="@android:style/Widget">
        <item name="android:textColor">@drawable/spinner_text_selector</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
